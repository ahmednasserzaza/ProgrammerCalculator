<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_giant"
        android:textColor="@color/black"
        />
    <Spinner
        android:id="@+id/spinner_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_from"
        app:layout_constraintEnd_toStartOf="@+id/spinner_to"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_verySmall"
        android:layout_marginTop="@dimen/margin_small"
        android:entries="@array/number_systems"
        />
    <TextView
        android:id="@+id/textView_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/spinner_to"
        android:layout_marginTop="@dimen/margin_giant"
        android:textColor="@color/black"
        />
    <Spinner
        android:id="@+id/spinner_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/spinner_from"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_to"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_verySmall"
        android:layout_marginTop="@dimen/margin_small"
        android:entries="@array/number_systems"
        />


    <EditText
        android:id="@+id/editText_entering"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:hint="@string/number_to_convert"
        android:padding="@dimen/padding_small"
        android:inputType="text"
        android:importantForAutofill="no"
        android:background="@drawable/edit_text_shape"
        app:layout_constraintTop_toBottomOf="@+id/spinner_from"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_giant"
        android:textColorHint="@color/hint_color"
        android:textSize="@dimen/text_size_medium"
        />

    <Button
        android:id="@+id/button_get_result"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="@string/result"
        app:layout_constraintTop_toBottomOf="@+id/editText_entering"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginVertical="@dimen/margin_large"
        android:textAllCaps="false"
        android:background="@drawable/button_shape"
        />

    <TextView
        android:id="@+id/result_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_header"
        app:layout_constraintTop_toBottomOf="@+id/button_get_result"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_giant"
        android:layout_marginStart="@dimen/margin_large"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium"
        />
    <TextView
        android:id="@+id/textView_result"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/result_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:textColor="@color/white"
        android:background="@drawable/edit_text_shape"
        android:gravity="center"
        android:paddingHorizontal="@dimen/padding_small"
        android:backgroundTint="@color/purple_200"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_small"
        />

</androidx.constraintlayout.widget.ConstraintLayout>